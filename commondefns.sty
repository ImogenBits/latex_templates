}
\newcommand{\optionimpliesnot}[2]{
    \DeclareOptionX{#1}{
        \expandafter\providecommand\csname #1\endcsname{True}
        \expandafter\providecommand\csname #2\endcsname{}
        \expandafter\renewcommand\csname #2\endcsname{}
    }
}

